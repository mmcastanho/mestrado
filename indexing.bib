file = {:C$\backslash$:/Users/agljunior/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Tsinaraki et al. - 2005 - Ontology-based semantic indexing for MPEG-7 and TV-anytime audiovisual content.pdf:pdf},
isbn = {1380-7501},
